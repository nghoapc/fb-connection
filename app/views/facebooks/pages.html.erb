<div style="text-align: center; padding-top: 250px; height: 1200px; background-color: #ccc">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Page ID</th>
            <th scope="col">Page Name</th>
            <th scope="col">Page Url</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @pages.each_with_index do |p, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= p.dig('id') %></td>
              <td><%= p.dig('name') %></td>
              <td><%= p.dig('page_token') %></td>
              <td>
                <%= link_to subcribe_app_facebooks_path(p.merge(s_index: index)), method: :post, class: "btn btn-success button-font" do %>
                 Connect
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
